{
    "name": "@lineo/react-ui-kit",
    "version": "1.0.3",
    "description": "React UI component library",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rm -rf dist/ && prettier --write src/ && npm run build:esm && npm run build:cjs && npm run tailwind",
        "build:esm": "tsc",
        "build:cjs": "tsc  --module CommonJS --outDir dist/cjs",
        "tailwind": "npx tailwindcss -i ./src/index.css -o ./dist/index.css"
    },
    "keywords": [],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/LineoIT/react-ui-kit.git"
    },
    "author": "Claver Amon",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/LineoIT/react-ui-kit/issues"
    },
    "homepage": "https://github.com/LineoIT/react-ui-kit#readme",
    "devDependencies": {
        "@types/node": "^20.4.2",
        "@types/react": "^18.2.14",
        "@types/react-dom": "^18.2.7",
        "autoprefixer": "^10.4.14",
        "postcss": "^8.4.25",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.3.2",
        "typescript": "^5.1.6"
    },
    "peerDependencies": {
        "autoprefixer": "^10.4.14",
        "postcss": "^8.4.25",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.3.2"
    },
    "dependencies": {
        "prettier": "^3.0.3"
    }
}